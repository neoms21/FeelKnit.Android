<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/mainBg">

    <Spinner
        android:layout_marginTop="20dp"
        android:id="@+id/feelingSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <EditText
        android:layout_below="@id/feelingSpinner"
        android:text=""
        android:background="@drawable/edittext_createfeeling"
        android:id="@+id/becauseText"
        android:textColorHint="@color/loginLabel"
        android:textColor="@color/loginLabel"
        android:maxLength="140"
        android:padding="5dp"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:hint="Because.."
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />


    <EditText
        android:layout_below="@id/feelingSpinner"
        android:id="@+id/soText"
        android:textColor="@color/loginLabel"
        android:hint="What am I doing..."
        android:padding="5dp"
        android:background="@drawable/edittext_createfeeling"
        android:textColorHint="@color/loginLabel"
        android:maxLength="140"
        android:layout_alignLeft="@id/becauseText"
        android:layout_alignRight="@id/becauseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btnSave"
        android:text="Share"
        style="@style/buttonStyle"
        android:textSize="20dp"
        android:width="200dp"
        android:layout_below="@id/soText"
        android:background="@color/buttonColor"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>