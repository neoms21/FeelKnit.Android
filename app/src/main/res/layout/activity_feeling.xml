<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    android:background="@color/mainBg">

    <TextView
        android:id="@+id/feeling_dropdown_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dropdown_background"
        android:drawableRight="@drawable/icn_dropdown_open"
        android:gravity="center_vertical|left"
        android:padding="10dip"
        android:text="Select a feeling" />

    <LinearLayout
        android:id="@+id/dropdown_foldout_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:background="@drawable/dropdown_background"
        android:orientation="vertical"
        android:padding="1dip"
        android:visibility="gone">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/feelingTextsListView">

        </ListView>
    </LinearLayout>


    <EditText
        android:text=""
        android:background="@drawable/edittext_createfeeling"
        android:id="@+id/becauseText"
        android:textColorHint="@color/loginLabel"
        android:textColor="@color/loginLabel"
        android:maxLength="140"
        android:padding="5dp"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:hint="Because.."
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />


    <TextView
        android:id="@+id/soText"
        android:textColor="@color/loginLabel"
        android:hint="What do I do ?"
        android:padding="5dp"
        android:textColorHint="@color/loginLabel"
        android:maxLength="140"
        android:textSize="18dp"
        android:layout_alignLeft="@id/becauseText"
        android:layout_alignRight="@id/becauseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnSave"
        android:text="Share"
        style="@style/buttonStyle"
        android:textSize="20dp"
        android:width="200dp"
        android:layout_below="@id/soText"
        android:background="@color/buttonColor"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--<TextView-->
    <!--android:id="@+id/txtLocation"-->
    <!--android:text="Share"-->
    <!--android:textSize="20dp"-->
    <!--android:width="200dp"-->
    <!--android:layout_below="@id/soText"-->
    <!--android:layout_margin="10dp"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content" />-->


</LinearLayout>